{% extends 'base.html.twig' %}

{% block title %}Modifier une figure - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}
    <section id="trickUpdate">
        <div class="mb-5 container w-50">
            <h1 class="mt-5 text-center">Modifier la figure</h1>
            <h2 class="mb-5 text-center">"{{ trick.title }}"</h2>
            {% include('trick/_form.html.twig') %}
            <a href="{{ path('trick', {slug: trick.slug}) }}" title="Retour à la page de la figure"><i class="fas fa-arrow-left mr-3"></i>Retour</a>
            <a href="{{ path('trick_delete', {id: trick.id}) }}" class="card-icon ml-4" title="Supprimer la figure" onclick="return confirm('Êtes vous certain de vouloir supprimer la figure {{ trick.title }}?')"><i class="fas fa-trash"></i></a>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/addMedia.js') }}"></script>
{% endblock %}
