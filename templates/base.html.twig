<!DOCTYPE html>
<html id="top" lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Snowtricks{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/fontawesome.min.css') }}">
            <link rel="shortcut icon" type="/image/png" href="{{ asset('img/logo.png') }}">
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% endblock %}
    </head>
    <body>
        <header class="d-none d-lg-block">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="/"><img src="/img/logo.png"></a>
                <div class="navbar-nav ml-auto mr-5">
                    <a class="nav-item nav-link active" href="/">Accueil <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link" href="/#tricks">Figures</a>
                    {% if app.user %}
                        <a class="nav-item nav-link" href="{{ path('logout') }}">Déconnexion</a>
                    {% else %}
                        <a class="nav-item nav-link" href="{{ path('login') }}">Se connecter</a>
                        <a class="nav-item nav-link" href="{{ path('register') }}">S'inscrire</a>
                    {% endif %}
                </div>
            </nav>
        </header>

        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>

        <footer class="text-center navbar navbar-expand-lg navbar-light bg-light text-center">
            <div class="navbar navbar-expand-lg navbar-light bg-light d-none d-lg-block">
                <p>Snowtricks - Copyright © 2020</p>
            </div>
            <div id="phoneIcons" class="text-center d-lg-none w-100 d-flex justify-content-around">
                <a class="icon" href="/"><i class="fas fa-home"></i></a>
                {% if app.user %}
                    <a class="icon" href="{{ path('trick_add') }}"><i class="fas fa-plus-circle"></i></a>
                    <a class="icon" href="{{ path('logout') }}"><i class="fas fa-sign-out-alt"></i></a>
                {% else %}
                    <a class="icon" href="{{ path('login') }}"><i class="fas fa-sign-in-alt"></i></a>
                {% endif %}
            </div>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/popper.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
